<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>



<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
              
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>*@
                @Html.Partial("_LoginPartial")
            </div>
       
        </div>
    </nav>
    <div class="container-fluid">
            <div class="row row-offcanvas row-offcanvas-left">
                <div id="sidebar" class="sidebar-offcanvas">
                    <div class="col-md-12">
                        <h3>Search</h3>
                        <ul class="nav nav-pills nav-stacked">
                            <li>
                                @using (Html.BeginForm("search", "BuyItems", FormMethod.Get, new { @class = "form" }))
                                {
                                    <p>
                                         @Html.TextBox("searchItem") 
                                        <input type="submit" value="Search" />
                                    </p>
                                }
                            </li>
                            <li>@Html.ActionLink("Books", "BookDetails", "BuyItems")</li>
                            <ul>                               
                                <li>@Html.ActionLink("Fiction", "selection_genre", "BuyItems", new { given_itemType = "Book" , given_genre = "fiction" }, null)</li>
                                <li>@Html.ActionLink("Literature", "selection_genre", "BuyItems", new { given_itemType = "Book", given_genre = "Literature" }, null)</li>
                                <li>@Html.ActionLink("Mystery", "selection_genre", "BuyItems", new { given_itemType = "Book", given_genre = "Mystery" }, null)</li>
                            </ul> 
                            <li>@Html.ActionLink("Movies", "MovieDetails", "BuyItems")</li>
                            <ul>
                                <li>@Html.ActionLink("Romance", "selection_genre", "BuyItems", new { given_itemType = "Movie", given_genre = "Romance" }, null)</li>
                                <li>@Html.ActionLink("Fairy Tale", "selection_genre", "BuyItems", new { given_itemType = "Movie", given_genre = "Fairy Tale" }, null)</li>
                                <li>@Html.ActionLink("Mystery", "selection_genre", "BuyItems", new { given_itemType = "Movie", given_genre = "Mystery" }, null)</li>
                            </ul>
                            <li>@Html.ActionLink("Games", "GameDetails", "BuyItems")</li>
                            <ul>
                                <li>@Html.ActionLink("3D", "selection_genre", "BuyItems", new { given_itemType = "Game", given_genre = "3D" }, null)</li>
                                <li>@Html.ActionLink("Kids", "selection_genre", "BuyItems", new { given_itemType = "Game", given_genre = "Kids" }, null)</li>
                                <li>@Html.ActionLink("Mystery", "selection_genre", "BuyItems", new { given_itemType = "Game", given_genre = "Mystery" }, null)</li>
                            </ul>
                        </ul>
                    </div>
                </div>
                <div id="main">
                    <div class="col-md-12">
                        <div>
                            @*<img src="@Url.Content(item.ImageFile)" alt="" />*@
                            <img src="~/Content/images/backgroundimage.png" style="height: 45px; width: 1100px" />
                        </div>
                        <div class="container body-content">
                            @RenderBody()
                            <hr />
                            <footer>
                                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                            </footer>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    @*<div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
