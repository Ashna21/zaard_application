                @Html.DisplayFor(modelItem => item.itemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            @*<td>
                @Html.DisplayFor(model => model.image)

            </td>*@
            <td>
                @Html.ActionLink("More Information", "moreInfo", new { buyItemId = item.buyItemID })
            </td>
            
        </tr>
        
    }
</table>

